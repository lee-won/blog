			<h3 class="panel-title">好文推荐</h3>
		</div>
		<div class="panel-body good_article">
			<ul class="list">
				<% postRec.forEach(function(post,index){ %>
				<li>
					<a href="/u/<%= post.name %>/<%= post._id %>">
						<%= post.title %>
					</a><span>浏览量(<%= post.pv %>)</span>
				</li>
				<% }) %>

			</ul>
		</div>
	</div>
