<div class="main-left">
	<div id="date"></div>

	<div class="panel">
		<div class="panel-header">
			<h3 class="panel-title">新进博主</h3>
			<span id="head-more" headPage='1'>换一批</span>
		</div>
		<div class="panel-body new_user">
			<div id="headContent">
				<% users.forEach(function(user,index) { %>

				<dl class="expert_list">
					<dt><a href="/u/<%= user.name %>" target="_blank"><img src="<%= user.head %>" alt="img"></a></dt>
					<dd>
						<a href="/u/<%= user.name %>" target="_blank" class="expert_t">
							<%= user.name %>
						</a>
					</dd>
				</dl>
				<% }) %>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>

